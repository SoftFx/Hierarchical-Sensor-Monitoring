@using HSMServer.Model.History;
@using HSMServer.Constants;
@using HSMServer.Controllers;
@using HSMServer.Extensions;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model HistoryValuesViewModel


@if (Model.Values.Count == 0)
{
    <div id="noTableValues_@Model.EncodedId"></div>
}
else
{
    <div>
        <table class='table table-striped'>
            <thead>
                <tr class="text-nowrap">
                    <th>Date</th>
                    @if (Model.IsBarSensor)
                    {
                        <th>Min</th>
                        <th>Mean</th>
                        <th>Max</th>
                        <th>Count</th>
                    }
                    else
                    {
                        <th>Value</th>
                    }
                    <th>Status</th>
                    <th>Comment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var value in Model.Values)
                {
                    <tr>
                        <td>@value.Time.ToDefaultFormat()</td>
                        @if (Model.IsBarSensor)
                        {
                            var barValue = value as BarSensorValueViewModel;

                            <td>@barValue.Min</td>
                            <td>@barValue.Mean</td>
                            <td>@barValue.Max</td>
                            <td>@barValue.Count</td>
                        }
                        else
                        {
                            var simpleValue = value as SimpleSensorValueViewModel;

                            <td>@simpleValue.Value</td>
                        }
                        <td>
                            <span class="@value.Status.ToIcon()"></span> @value.Status
                        </td>
                        <td>@value.Comment</td>
                    </tr>
                }
            </tbody>
        </table>

        <input id='oldest_date_@Model.EncodedId' type='text' style='display: none' value='@Model.OldestValueTime'/>

        <div class="container d-flex justify-content-center">
            <ul class="pagination">
                <li id="prevPageButton" class="page-item button-link">
                    <a class="page-link" aria-label="Previous" onclick="prevPage('@(Model.EncodedId)', '@((int)Model.SensorType)')">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link">@Model.CurrentPageIndex</a>
                </li>
                <li id="nextPageButton" class="page-item button-link">
                    <a class="page-link" aria-label="Next" onclick="nextPage('@(Model.EncodedId)', '@((int)Model.SensorType)')">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
}


<script>
    if ('@Model.NextPageIsEnabled' != "True") {
        $('#nextPageButton').addClass('disabled');
    }

    if ('@Model.PrevPageIsEnabled' != "True") {
        $('#prevPageButton').addClass('disabled');
    }
</script>
