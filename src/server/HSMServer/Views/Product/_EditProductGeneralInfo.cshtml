@using HSMServer.Controllers
@using HSMServer.Model.ViewModel

@model ProductGeneralInfoViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<form method="post" asp-action="@nameof(ProductController.EditProduct)">
    <input id="productKey" asp-for="Id" value="@Model.Id" style="display: none" />

    <div class="row mt-2">
        <label class="col-1 col-form-label" asp-for="Name"></label>
        <div class="col-5">
            <input class="form-control" asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div>
        <input asp-for="@Model.OldName" value="@Model.OldName" style="display: none" />
    </div>

    <div class="row mt-2">
        <label class="col-1 col-form-label" asp-for="Description"></label>
        <div class="col">
            <textarea type='text' class='form-control' asp-for="Description" value='@Model.Description'></textarea>
        </div>
    </div>

    <div class="d-flex justify-content-end my-2">
        <button type="submit" class="btn btn-secondary independentSizeButton">Save</button>
    </div>
</form>