@model HSMServer.Model.Dashboards.PanelViewModel

<table class="table p-0 m-0" style="table-layout:fixed;font-size: clamp(1rem, 3vw, 1rem)">
    <thead>
    <tr>
        <th class="col" scope="col">Label</th>
        <th class="col" scope="col">Value</th>
        <th class="col" scope="col">
            <div class="d-flex justify-content-end">
                <div style="width: 9rem">
                    <span>Time</span>
                </div>
            </div>
        </th>
    </tr>
    </thead>

    <tbody>
    @foreach (var i in @Model.Sources.Values)
    {
        @await Html.PartialAsync("_LastValue", i)
    }
    </tbody>
</table>