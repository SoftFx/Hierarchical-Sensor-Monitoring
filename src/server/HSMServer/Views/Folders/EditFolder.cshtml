@using HSMServer.Model.Folders;
@using HSMServer.Controllers;

@model EditFolderViewModel

@{
    var isAdd = Model.Id == null;
    var disabledTab = isAdd ? "disabled" : string.Empty;
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="container">
    <div class="row w-100 justify-content-center">
        <h4 class="my-3 text-break">@(isAdd ? "Add folder" : $"Edit folder '{@Model.Name}'")</h4>

        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">General</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @disabledTab" id="sensors-tab" data-bs-toggle="tab" data-bs-target="#sensors" type="button" role="tab" aria-controls="sensors" aria-selected="false">Sensors settings</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @disabledTab" id="notifications-tab" data-bs-toggle="tab" data-bs-target="#notifications" type="button" role="tab" aria-controls="notifications" aria-selected="false">Notifications</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @disabledTab" id="members-tab" data-bs-toggle="tab" data-bs-target="#members" type="button" role="tab" aria-controls="members" aria-selected="false">Members</button>
            </li>
        </ul>
        <div class="tab-content w-100" id="myTabContent">
            <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                <form method="post" asp-action="@(isAdd ? nameof(FoldersController.AddFolder) : nameof(FoldersController.EditFolder))">
                    <input id="productKey" asp-for="@Model.Id" value="@Model.Id" style="display: none" />

                    @if (isAdd)
                    {
                        @await Html.PartialAsync("_AddGeneralSettings", Model)
                    }
                    else
                    {
                        @await Html.PartialAsync("_EditGeneralSettings", Model)
                    }
                </form>
            </div>

            <div class="tab-pane fade" id="sensors" role="tabpanel" aria-labelledby="sensors-tab">...</div>

            <div class="tab-pane fade" id="notifications" role="tabpanel" aria-labelledby="notifications-tab">...</div>

            <div class="tab-pane fade" id="members" role="tabpanel" aria-labelledby="members-tab">...</div>
        </div>
    </div>
</div>