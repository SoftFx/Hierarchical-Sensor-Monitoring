@using HSMServer.Model.Configuration
@using HSMServer.BackgroundServices
@using HSMServer.ServerConfiguration

@model MonitoringSettingsViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="row mt-3">
    <div class="col-3">
        <label class="col-form-label" asp-for="IsMonitoringEnabled"></label>
    </div>
    <div class="col-auto form-check form-switch ms-3 mt-2">
        <input class="form-check-input" type="checkbox" asp-for="IsMonitoringEnabled">
    </div>
</div>
<div class="row">
    <div class="offset-3 col-9">
        <label class="note">Will self-monitoring statistics be collected (product "@DataCollectorWrapper.SelfMonitoringProductName"). Default value is @MonitoringOptions.DefaultIsMonitoringEnabled. The setting will be applied in real time.</label>
    </div>
</div>

<div class="row mt-2">
    <div class="col-3">
        <label class="col-form-label" asp-for="DatabaseStatisticsPeriodDays"></label>
    </div>
    <div class="col-2">
        <input class="form-control" asp-for="DatabaseStatisticsPeriodDays">
    </div>
    <div class="col">
        <label class="col-form-label">day(s)</label>
    </div>
</div>
<div class="row">
    <div class="offset-3 col-9">
        <label class="note">Frequency of collecting statistics on memory occupied by sensors in the database (sensors "@DatabaseSensorsStatistics.FullStatisticsSensorName" and "@DatabaseSensorsStatistics.TopHeaviestSensorName"). Default value is @MonitoringOptions.DefaultDatabaseStatisticsPeriodDays day. The setting will be applied in real time.</label>
    </div>
</div>

<div class="row mt-2">
    <div class="col-3 d-flex align-items-center">
        <label class="col-form-label" asp-for="TopHeaviestSensorsCount"></label>
    </div>
    <div class="col-2">
        <input class="form-control" asp-for="TopHeaviestSensorsCount">
    </div>
</div>
<div class="row">
    <div class="offset-3 col-9">
        <label class="note">Number of sensors that are collected by the sensor "@DatabaseSensorsStatistics.TopHeaviestSensorName". Default value is @MonitoringOptions.DefaultTopHeaviestSensorsCount sensors. The setting will be applied in real time.</label>
    </div>
</div>

<div class="d-flex justify-content-end mt-2">
    <button type="submit" class="btn btn-primary independentSizeButton mt-1">Save</button>
</div>


<script>
    $(document).ready(function () {
        savingFormSubscribe("selfMonitoringSettings_form", "Self monitoring settings have been succesfully saved!");
    });
</script>
