@using HSMCommon.Constants
@using HSMCommon.Extensions
@using HSMServer.Constants
@using HSMServer.Controllers
@using HSMServer.Model.Configuration

@model TelegramSettingsViewModel


<p class="mt-3">
    You can configure a Telegram bot. Please install it via Telegram and put configuration parameters 
    (@Model.GetDisplayName(nameof(Model.BotName)), @Model.GetDisplayName(nameof(Model.BotToken)), @Model.GetDisplayName(nameof(Model.IsEnabled))) in the form below.
    Installation link <a href='https://core.telegram.org/bots/features#botfather' target='_blank'>Bot Installation</a>.
</p>

<div class="row mt-2">
    <div class="col-2">
        <label class="col-form-label" asp-for="IsEnabled"></label>
    </div>
    <div class="col-auto form-check form-switch ms-3 mt-2">
        <input class="form-check-input" type="checkbox" asp-for="IsEnabled">
    </div>
</div>
<div class="row">
    <div class="offset-2 col-10">
        <label class="note">Can bot send messages. The setting will be applied in real time.</label>
    </div>
</div>

<div class="row mt-2">
    <div class="col-2">
        <label class="col-form-label" asp-for="BotName"></label>
    </div>
    <div class="col">
        <input class="form-control" asp-for="BotName">
    </div>
</div>
<div class="row">
    <div class="offset-2 col-10">
        <label class="note">Installed by BotFather bot name. It must be ended with "bot". The setting will be applied in real time.</label>
    </div>
</div>

<div class="row mt-2">
    <div class="col-2 d-flex align-items-center">
        <label class="col-form-label" asp-for="BotToken"></label>
    </div>
    <div class="col">
        <input class="form-control" asp-for="BotToken">
    </div>
</div>

<div class="row">
    <div class="offset-2 col-10">
        <label class="note">Generated by BotFather secret access token. The setting will be applied in real time.</label>
    </div>
</div>

<div class="row mt-2">
    <div class="col-2 d-flex align-items-center">
        <label class="col-form-label" asp-for="Status"></label>
    </div>
    <div class="col">
        <input disabled class="form-control" asp-for="Status">
    </div>
</div>

<div class="d-flex justify-content-between mt-2">
    <div class="col-2 d-flex align-items-center">
        <button id="restartButton" type="button" class="btn btn-primary mt-1">
            <i class="fab fa-telegram"></i> Restart Telegram Bot
        </button>
        <div id="loadingIcon" style="display: none; margin-left: 10px;">
            <div class="spinner"></div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary independentSizeButton mt-1">Save</button>
</div>

<div id="restartingErrorMessage" style="color: red; display: none;"></div>


<script>
    $(document).ready(function () {
        savingFormSubscribe("telegramSettings_form", "Telegram settings have been successfully saved!");
    });

    function showLoadingIcon() {
        document.getElementById('loadingIcon').style.display = 'block';
    }

    function hideLoadingIcon() {
        document.getElementById('loadingIcon').style.display = 'none';
    }

    $('[id^=restartButton]').on('click', function() {
        showLoadingIcon();
        $.ajax({
            type: 'GET',
            url: '@Html.Raw(Url.Action(nameof(ConfigurationController.RestartTelegramBot), ViewConstants.ConfigurationController))',
            dataType: 'html',
            contentType: 'text',
            cache: false,
            async: true,
            success: function(data) {
                let message = $("#restartingErrorMessage");
                message.css("display", "block");

                if (data == "") {
                    message.empty().css("color", "green").append("Success.");
                    $('#Status').val('Running');
                }
                else {
                    message.empty().css("color", "red").append(data);
                    $('#Status').val('Stopped');
                }
                
                hideLoadingIcon();
            }
        });
    });
</script>
