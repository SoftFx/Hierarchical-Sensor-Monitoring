@using HSMServer.Model.Configuration
@using HSMServer.ServerConfiguration

@model ServerSettingsViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<h6 class="mt-3">Kestrel settings</h6>

<div class="row mt-2">
    <div class="col-2">
        <label class="col-form-label" asp-for="SitePort"></label>
    </div>
    <div class="col-2">
        <input class="form-control" asp-for="SitePort">
    </div>
</div>
<div class="row">
    <div class="offset-2 col-auto">
        <label class="note">Port on which the site is accessible. Default value is @KestrelConfig.DefaultSitePort.</label>
    </div>
</div>

<div class="row mt-2">
    <div class="col-2 d-flex align-items-center">
        <label class="col-form-label" asp-for="SensorsPort"></label>
    </div>
    <div class="col-2">
        <input class="form-control" asp-for="SensorsPort">
    </div>
</div>
<div class="row">
    <div class="offset-2 col-auto">
        <label class="note">Port on which the API is available. Default value is @KestrelConfig.DefaultSensorPort.</label>
    </div>
</div>

<h6 class="mt-2">Certificate settings</h6>

<div class="row mt-2">
    <div class="col-2">
        <label class="col-form-label" asp-for="CertificateName"></label>
    </div>
    <div class="col">
        <input class="form-control" asp-for="CertificateName">
    </div>
</div>
<div class="row">
    <div class="offset-2 col-auto">
        <label class="note">Server certificate name.</label>
    </div>
</div>

<div class="row mt-2">
    <div class="col-2 d-flex align-items-center">
        <label class="col-form-label" asp-for="CertificateKey"></label>
    </div>
    <div class="col">
        <input class="form-control" asp-for="CertificateKey">
    </div>
</div>
<div class="row">
    <div class="offset-2 col-auto">
        <label class="note">Server certificate key.</label>
    </div>
</div>

<h6 class="mt-2">Database backup settings</h6>

<div class="row mt-2">
    <div class="col-2">
        <label class="col-form-label" asp-for="BackupPeriodHours"></label>
    </div>
    <div class="col-2">
        <input class="form-control" asp-for="BackupPeriodHours">
    </div>
    <div class="col">
        <label class="col-form-label">hour(s)</label>
    </div>
</div>
<div class="row">
    <div class="offset-2 col-auto">
        <label class="note">Frequency of environment database backup. This database contains meta information of server entities. Default value is @BackupDatabaseConfig.DefaultPeriodHours hour.</label>
    </div>
</div>

<div class="row mt-2">
    <div class="col-2 d-flex align-items-center">
        <label class="col-form-label" asp-for="BackupStoragePeriodDays"></label>
    </div>
    <div class="col-2">
        <input class="form-control" asp-for="BackupStoragePeriodDays">
    </div>
    <div class="col">
        <label class="col-form-label">day(s)</label>
    </div>
</div>
<div class="row">
    <div class="offset-2 col-auto">
        <label class="note">Maximum storage time for database backup. Default value is @BackupDatabaseConfig.DefaultStoragePeriodDays days.</label>
    </div>
</div>

<div class="d-flex justify-content-end mt-2">
    <button type="submit" class="btn btn-primary independentSizeButton mt-1">Save</button>
</div>