@using HSMServer.Controllers
@using HSMServer.Core.Model;
@using HSMServer.Model

@model TelegramSettingsViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Telegram";
}

<div class="container mt-3">
    <div class="row">
        <div class="row">
            <h4 class="col-auto">Telegram</h4>
            <i class="col-auto fab fa-telegram fa-lg p-0 mt-2"></i>
        </div>

        <h5>Messages settings</h5>

        <form class="mx-4 my-2" method="post" asp-action="@nameof(AccountController.UpdateTelegramSettings)">
            <div class="form-group row">
                <label class="col-2 col-form-label" asp-for="MessagesDelay"></label>
                <div class="col-auto p-0">
                    <div class="input-group">
                        <input type="number" class="form-control" asp-for="MessagesDelay">
                        <span class="input-group-text">sec</span>
                    </div>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label class="col-2 col-form-label" asp-for="MinStatusLevel"></label>
                <div class="col-auto p-0">
                    <select class="form-select" asp-for="MinStatusLevel" asp-items="Html.GetEnumSelectList<SensorStatus>()"></select>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label class="col-2 col-form-label" asp-for="EnableMessages"></label>
                <div class="col-auto form-check form-switch mt-2">
                    <input class="form-check-input" type="checkbox" asp-for="EnableMessages">
                </div>
            </div>
            <button type="submit" class="btn btn-secondary my-1">Save</button>
        </form>

        <h5>Authorization settings</h5>

        <div class="row mx-4 mb-2">
            <label class="col-auto p-0">If you want to start getting messages in telegram click</label>
            <div class="col-auto">
                <a asp-action="@nameof(AccountController.OpenInvitationLink)" target="_blank">invitation link</a>
            </div>
        </div>

        @if (Model.IsUserAuthorized)
        {
            <h5>Authorized accounts</h5>

            <table class="table mx-4">
                <tr>
                    <th>Username</th>
                    <th>Authorized</th>
                    <th style="text-align:center">Actions</th>
                </tr>
                @foreach (var chat in Model.Chats)
                {
                    <tr>
                        <td>@chat.Username</td>
                        <td>@chat.AuthorizationTime</td>
                        <td style="text-align:center">
                            <div class="dropdown">
                                <i id="chatActions" class="fa-solid fa-ellipsis-vertical" data-bs-toggle="dropdown" style="cursor: pointer"></i>
                                <div class="dropdown-menu" aria-labelledby="chatActions">
                                    <a class="dropdown-item" asp-action="@nameof(AccountController.SendTestTelegramMessage)"
                                                             asp-route-chatId="@chat.ChatId"
                                                             asp-route-userName="@chat.Username">
                                        Send test message
                                    </a>
                                    <a class="dropdown-item" asp-action="@nameof(AccountController.RemoveTelegramAuthorization)"
                                                             asp-route-chatId="@chat.ChatId">
                                        Remove authorization
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </table>

            <h5>Authorized groups</h5>
        }
    </div>
</div>
