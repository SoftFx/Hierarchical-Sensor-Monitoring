<Project Sdk="Microsoft.NET.Sdk.Worker">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>disable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UserSecretsId>dotnet-HSMPingModule-71CF568D-B617-46BA-A8F9-6AFE241BF8AE</UserSecretsId>
        <Version>1.0.1</Version>
    </PropertyGroup>

    <PropertyGroup>
        <EnableSDKContainerSupport>true</EnableSDKContainerSupport>
        <ContainerImageTags>$(Version)</ContainerImageTags>
        <ContainerImageName>$(MSBuildProjectName)</ContainerImageName>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.0" />
        <PackageReference Include="Microsoft.NET.Build.Containers" Version="7.0.400" />
        <PackageReference Include="NLog.Extensions.Logging" Version="5.2.2" />
        <PackageReference Include="NLog.Web.AspNetCore" Version="5.2.2" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\collector\HSMDataCollector\HSMDataCollector.csproj" />
      <ProjectReference Include="..\..\server\HSMCommon\HSMCommon.csproj" />
    </ItemGroup>
</Project>
